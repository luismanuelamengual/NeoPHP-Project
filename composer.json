{
  "name": "neogroup/neophp-project",
  "description": "My Neo Application",
  "keywords": ["framework", "neophp"],
  "license": "MIT",
  "type": "project",
  "require": {
    "php": ">=7.0.0",
    "neogroup/neophp": "^4.1",
    "illuminate/view": "^5.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.0",
    "fzaninotto/faker": "^1.4",
    "mockery/mockery": "^1.0"
  },
  "autoload": {
    "psr-4": { "": "src/" }
  },
  "autoload-dev": {
    "psr-4": { "": "tests/" }
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "scripts": {
    "post-install-cmd": [
      "bower install"
    ],
    "post-update-cmd": [
      "bower install"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
